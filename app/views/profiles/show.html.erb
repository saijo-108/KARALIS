<% content_for(:title, t('.title')) %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'profiles/show' %>
<% end %>

<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to "編集", edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr class="white_text">
          <th scope="row">メールアドレス</th>
          <td><%= current_user.email %></td>
        </tr>
        <tr class="white_text">
          <th scope="row">ユーザーネーム</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr class="white_text">
          <th scope="row">作ったリスト: <%= " #{@total_lists}" %>個</th>
          <th scope="row">所属グループ: <%= " #{@total_groups}" %>つ</th>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="list_change">
  <%= link_to 'リスト一覧へ', lists_path, class:"btn change btn_cubic1 btn_radius btn_back" %>
  <%= link_to 'グループ一覧へ', groups_path, class:"btn change btn_cubic2 btn_radius btn_back" %>
</div>