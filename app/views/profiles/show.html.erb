<% content_for(:title, t('.title')) %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'profiles/show' %>
<% end %>

<div class="space"></div>

<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <table class="table">
        <tr class="white_text">
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr class="white_text">
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr class="white_text">
          <th scope="row"><%= t('.made_list') %>: <%= " #{@total_lists}" %>個</th>
          <th scope="row"><%= t('.joing_group') %>: <%= " #{@total_groups}" %>つ</th>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="edit">
  <%= link_to "編集", edit_profile_path, class: 'btn btn-success' %>
</div>