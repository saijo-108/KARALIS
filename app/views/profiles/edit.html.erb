<% content_for(:title, t('.title')) %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'profiles/edit' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, url: profile_path, html: { id: "edit_validate" }, local: true do |f| %>
        <%= f.label :email, class: "white_text" %>
        <%= f.email_field :email, class: 'form-control mb-3 validate[required]' %>

        <%= f.label :name, class: "white_text" %>
        <%= f.text_field :name, class: 'form-control mb-3 validate[required]' %>
        <div class="btn_zone">
          <%= f.submit "変更", class: 'btn btn-primary' %>
          <%= link_to "変更せずに戻る", :back, class: "btn btn-danger left" %>
        </div>
      <% end %>
    </div>
  </div>
</div>