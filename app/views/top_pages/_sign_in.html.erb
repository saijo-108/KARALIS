<% content_for :css do %>
    <%= stylesheet_link_tag 'users/sessions' %>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login_validate" }) do |f| %>
  <%= render "shared/error_messages", resource: resource %>
  <div class="modal" id="loginModal" role="dialog" tabindex="-1" area-hidden="true">
  <div class="wrapper">
  <div class="singer_black2"></div>
  <div class="singer_white2"></div>
  <span class="title2">KARALIS</span>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">×</span>
  </button>
      <div class="login_text">
        <%= f.submit (t 'defaults.login'), class:"login_btn" %>
      </div>
      <%= image_tag "LINE_icon.png", class:"line_icon" %>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), method: :post do %>
            <button class="btn line_btn">LINE</button>
          <% end %><br />
        <% end %>
      <% end %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: User.human_attribute_name(:password), class:"password_text validate[required]" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: User.human_attribute_name(:email), class:"email_text validate[required]" %>
      <span class="or_text">or</span>
      <span class="new_text"><%= t('defaults.new_user') %></span>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t('defaults.forget_password'), new_password_path(resource_name), class:"forget_text" %><br />
      <% end %>
      <div class="underline">
      </div>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to  '#', "data-toggle": "modal", "data-target": '#signUpModal' do %>
          <button class="btn register_btn", id="register">新規登録</button>
        <% end %><br />
      <% end %>
      <%= image_tag "mail_icon.png", class:"email_icon" %>
      <%= image_tag "key_icon.png", class:"key_icon" %>
  </div>
  </div>
<% end %>



