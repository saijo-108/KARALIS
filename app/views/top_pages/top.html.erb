<% content_for :css do %>
  <%= stylesheet_link_tag 'top_pages/top' %>
<% end %>

<div class='top-wrapper'>
  <div class='top-inner-text'>
    <h1>『好き』を共有しよう</h1>
  </div>
</div>
<%= render("sign_up") %>

<%= render("sign_in") %>

<script>
    $(function(){
        $('#register').on('click', function() {
            changeModal('loginModal', 'signUpModal');
        });
        function changeModal(beforeModal, afterModal) {
            $('#'+beforeModal).modal( 'hide' );
            $('#'+afterModal).modal( 'hide' );
        }
    });

    $(function(){
        $('#to_login').on('click', function() {
            changeModal('signUpModal', 'loginModal');
        });
        function changeModal(beforeModal, afterModal) {
            $('#'+beforeModal).modal( 'hide' );
            $('#'+afterModal).modal( 'hide' );
        }
    });
</script>