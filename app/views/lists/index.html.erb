<% content_for(:title, t('.title')) %>
<% content_for :css do %>
    <%= stylesheet_link_tag 'lists/index' %>
<% end %>


<div class="new">
  <%= link_to new_list_path do %>
    <div class="button new-button new-list">
      <span><%= t(".new_list") %></span>
    </div>
  <% end %>
  <%= link_to groups_path do %>
    <div class="button new-button new-list">
      <span><%= t(".joined_group") %></span>
    </div>
  <% end %>
</div>

<div class="flex">
  <div class="list">
    <div class="list-wrapper">
      <div class="list-head">
        <%= t("defaults.list_index") %>
      </div>
      <div class="playlist">
        <% if @lists.present? %>
          <% @lists.each do |list| %>
            <div class="song">
              <div class="center">
                <%= link_to list_path(list) do %>
                  <%= list.name %>
                <% end %>
              </div>
            </div>
          <% end %>
          <% @songs.each do |song| %>
            <%= image_tag "#{song.image}" %>
          <% end %>
        <% else %>
          <p><%= t(".not_list") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
