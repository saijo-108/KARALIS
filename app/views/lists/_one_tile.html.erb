<div class="">
    <% @lists.each do |list| %>
        <% @tile.clear %>
        <div class="center tile_width swiper-slide">
            <%= link_to list_path(list), class:"list_name" do %>
                <%= list.name %>
                <% unless @songs.any? %>
                    <p class="white_text">曲を追加しよう！</p>
                <% end %>
            <div class="tile_wrap">
                <% @songs.each_with_index do |song, i| %>
                <% if song.list_id == list.id %>
                    <% @tile.push(song) %>
                    <div class="tile"><%= image_tag "#{song.image}", size:"100x100" %></div>
                    <% break if @tile.count == 4 %>
                <% end %>
                <% end %>
            </div>
            <% end %>
        </div>
    <% end %>
</div>