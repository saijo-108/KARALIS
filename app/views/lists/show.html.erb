<% content_for(:title, t('.title')) %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'lists/show' %>
<% end %>

<div class="list_form">
  <div class="rrr">
    <div class="white_text">
      <%= form_with model: @list, class:"text_center", local: true do |f| %>
        <div class="list_title"><%= @list.name %></div>
        <div class="list_change">
          <%= link_to 'リスト名を変更', edit_list_path(@list), class:"btn change btn_cubic btn_radius btn_back" %>
        </div>
        <div class="add">
          <%= link_to "曲を追加", new_list_song_path(@list.id), class:"btn change btn_cubic btn_radius btn_back" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<%= render "list_table" %>

<div class="text_right">
  <%= link_to "ホームへ", lists_path, class:'back_home' %>
  <%= link_to "グループ一覧へ", "#", class:'back_group' %>
  <%= link_to 'リストを削除', list_path(@list.id),class:"text_red", method: :delete %>
</div>

