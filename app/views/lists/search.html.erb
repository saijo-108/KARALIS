<% content_for :css do %>
  <%= stylesheet_link_tag 'lists/search' %>
<% end %>

<div class="search">
    <div class="form1">
    <%= form_with url: search_lists_path, method: :get, local: true do |form| %>
      <%= form.text_field :search, placeholder:"曲を検索する", value:params[:search] %>
      <%= form.submit '曲を検索', name: nil %>
    <% end %>
    </div>
</div>

<h1>検索結果</h1>
<%= form_with model: @list, local: true do |f| %>
  <div class="song-title">
      <% if @searchsongs.present? %>
          <% @searchsongs.each do |searchsong| %>
            <div class="white_text"><%= searchsong.name %></div>
            <div class="white_text"><%= searchsong.artists[0].name %></div>
            <div class="result">
              <div class="spotify">
                <iframe src="https://open.spotify.com/embed/track/<%= searchsong.id %>" width="100%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
              </div>
              <%= f.submit "作成", class: 'btn btn-primary register' %>
            </div>
          <% end %>
      <% end %>
  </div>
<% end %>